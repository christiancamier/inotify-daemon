include Makefile.inc

SUBDIRS = libCCR	\
	  src		\
	  doc_en	\
	  doc_fr

all install: Force
	$(SUBMAKE) _$@
	for sdir in $(SUBDIRS);	\
	do			\
	  (			\
	    cd $${sdir};	\
	    $(SUBMAKE) $@;	\
	  )			\
	done

clean distclean: Force
	for sdir in $(SUBDIRS);	\
	do			\
	  (			\
	    cd $${sdir};	\
	    $(SUBMAKE) $@;	\
	  )			\
	done
	$(SUBMAKE) _$@

_distclean: _clean
	rm -fr Makefile Makefile.inc
	rm -fr config.log config.status
	rm -fr autom4te.cache
	rm -fr libCCR

_clean: Force
	rm -fr $(ALL) $(COBJS) autom4te.cache
	rm -fr *~ \#* *.i

_all: Force
	:

_install:
	$(INSTALL_DOC) changelog
	gzip -f9 $(docdir)/changelog

Force:
	:

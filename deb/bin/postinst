#!/bin/bash

function ccr_postinst_abort_deconfigure { return 0; }
function ccr_postinst_abort_remove      { return 0; }
function ccr_postinst_abort_upgrade     { return 0; }
function ccr_postinst_configure         { return 0; }
function ccr_postinst_remove            { return 0; }
function ccr_postinst_triggered         { return 0; }
function ccr_postinst_upgrade           { return 0; }

CMD=${1}
FCT=ccr_postinst_${CMD/-/_}

if declare -F | awk '/^declare -f ccr_postinst/ { print $3; }' | grep ${FCT} > /dev/null 2>&1
then
    shift
    ${FCT} "$@";
    exit $?
else
    echo "Bad first argument '${1}'" >&2
    exit 255
fi

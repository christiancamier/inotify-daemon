include @topdir@/Makefile.inc

DEBDIR=@topdir@/deb

all install:	control.source create_deb.sh new-preinst.source old-prerm.source postinst.source
	@ echo "Building Debian package"
	@ bash create_deb.sh

clean: Force
	rm -fr builddir __init_vars __init_vars.source
	rm -f  inotify-daemon-*.deb
	rm -f  *~ \#*

distclean: clean
	rm -f  Makefile

Force:
	:
